<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.addressproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_address"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_address_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/BlueTheme">
        <activity android:name=".Activity.SignupActivity" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.FindActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.SelectActivity" />
        <activity android:name=".Activity.UpdateActivity" />
        <activity android:name=".Activity.InsertActivity" />
        <activity android:name=".Activity.GroupMainActivity"/>
        <activity android:name=".Activity.MainViewActivity"/>
        <activity
            android:name=".Activity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>