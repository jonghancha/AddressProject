<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.MainViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_margin="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/modify_image_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/modify_name"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    />
                <TextView
                    android:id="@+id/modify_view_phone"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/modify_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:maxHeight="40dp"
                android:text="사진 변경하기"
                android:textStyle="bold"

                android:background="@color/white"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"

                android:src="@drawable/call2"
                />

            <ImageButton
                android:id="@+id/mainview_sms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:background="@color/white"
                android:adjustViewBounds="true"
                android:src="@drawable/message"
                android:visibility="invisible"
                android:clickable="false"
                />
            <ImageButton
                android:id="@+id/mainview_email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxHeight="40dp"

                android:scaleType="fitCenter"
                android:background="@color/white"
                android:adjustViewBounds="true"
                android:src="@drawable/email"
                android:visibility="invisible"
                android:clickable="false"/>
            <Button
                android:id="@+id/mainview_star"
                android:text="star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="invisible"
                android:clickable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="?colorPrimary"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/modify_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="그룹"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <Spinner
                android:id="@+id/modify_groupname"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이메일"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/modify_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설명"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/modify_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="생일"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:id="@+id/modify_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?colorPrimary"
            android:padding="10dp"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/modify_cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="30dp"
                android:maxWidth="24dp"
                android:scaleType="fitCenter"
                android:background="?colorPrimary"
                android:adjustViewBounds="true"
                android:src="@drawable/delete"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="취소"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?colorPrimary"
            android:padding="10dp"
            android:layout_marginBottom="0px"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/modify_action_btn"
                android:text="전화"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxHeight="30dp"
                android:maxWidth="24dp"
                android:scaleType="fitCenter"
                android:background="?colorPrimary"
                android:adjustViewBounds="true"
                android:src="@drawable/update"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="수정"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>